                       VerticalAlignment="Center" FontSize="16" />
            <TextBlock Text="✿" FontSize="24" Foreground="White" VerticalAlignment="Center" DockPanel.Dock="Right" />
            <TextBox Background="LightCyan" Margin="8" />
