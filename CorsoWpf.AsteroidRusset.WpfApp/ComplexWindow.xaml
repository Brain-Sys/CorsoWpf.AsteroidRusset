            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Content="Calcola CF" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"
                Margin="12" />
